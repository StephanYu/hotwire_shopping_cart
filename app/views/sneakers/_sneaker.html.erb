<div id="<%= dom_id sneaker %>" class="border border-gray-300 rounded-lg relative">
  <%= turbo_frame_tag dom_id(sneaker, :items_in_cart) do %>
    <%= render partial: "widget_counter", locals: {sneaker: sneaker} %>
  <% end %>
  <%= link_to sneaker do %>
    <div class="p-2 rounded-t-lg bg-white">
      <%= image_tag sneaker.image, class: "rounded mx-auto"%>
    </div>
    <div class="p-2">
      <div class="flex justify-between">
        <h2 class="font-black text-2xl"><%= sneaker.name %></h2>
        <span class="font-bold text-2xl"><%= number_to_currency sneaker.price %></span>
      </div>
      <p class="text-gray-500"><%= sneaker.description %></p>
      <div class="text-sm text-gray-500"><%= sneaker.brand %></div>
    </div>
  <% end %>
  <div class="p-2 pt-0">
    <%= button_to "Add to Cart", add_to_cart_path(sneaker), method: :post, class: "btn-primary w-full" %>
  </div>
</div>
