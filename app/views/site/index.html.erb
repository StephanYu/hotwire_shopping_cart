<div>
  <h1 class="font-bold text-4xl mb-4">Apple Counter</h1>
  <div id='counter' class='mb-4'><%= @counter %> Apples</div>
  <div class="flex flex-row space-x-4 mb-4">
    <%= button_to "Add", add_path, class: 'p-2 bg-blue-500 text-white' %>
    <%= button_to "Remove", remove_path, class: 'p-2 bg-blue-500 text-white' %>
  </div>
  <p id='logs'>This is where we log stuff</p>
</div>
